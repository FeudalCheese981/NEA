{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/glad.c",
                "src/camera.cpp",
                "src/shader.cpp",
                "src/VBO.cpp",
                "src/VAO.cpp",
                "src/EBO.cpp",
                "src/mesh.cpp",
                "src/orbit.cpp",
                "src/object.cpp",
                "src/sphere.cpp",
                "src/grid.cpp",
                "src/light.cpp",
                "src/window.cpp",

                "imgui/imgui.cpp",
                "imgui/imgui_demo.cpp",
                "imgui/imgui_draw.cpp",
                "imgui/imgui_widgets.cpp",
                "imgui/imgui_tables.cpp",
                "imgui/imgui_impl_glfw.cpp",
                "imgui/imgui_impl_opengl3.cpp",

                "-o",
                "build/app.exe",
                
                "-Iinclude",
                "-Iimgui",

                "-Llib",
                "-lglfw3dll",
                "-lopengl32",
                "-lgdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "copy-shaders",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c", 
                "xcopy src\\shaders build\\shaders /E /I /Y"
            ],
            "problemMatcher": []
        },
        {
            "label": "copy-fonts",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "xcopy src\\fonts build\\fonts /E /I /Y"
            ]
        },
        {
            "label": "build",
            "dependsOn": [
                "compile",
                "copy-shaders",
                "copy-fonts"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}